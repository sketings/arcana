{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strict": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    // Output
    "module": "CommonJS",
    "target": "es2017",
    "importHelpers": true,
    "declaration": true,
    "resolveJsonModule": true,
    "incremental": true,
    "experimentalDecorators": true,
    "paths": {
      "@submodule1/*": ["./modules/arcana-fastify/*"],
      "@submodule2/*": ["./modules/mon_premier_module/*"],
      // ...
    }
  },
  "exclude": [
    "module_examples.json",
    "example",
    ".husky",
    "coverage",
    "**/*.spec.ts",
    "**/*.config.ts",
    "**/*.config.js",
  ],
}